<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/dash-head', { title: 'Students' }) %>

  <body>
    <%- include('../partials/dash-header', { title: 'Students' }) %>

    <main id="companiesPage">
      <div class="row">
        <div class="col s12">
          <div class="card">
            <div class="card-content">
              <table class="striped centered">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>LastName</th>
                    <th>Phone</th>
                    <th>age</th>
                    <th>Department</th>
                    <th>Acțiune</th>
                  </tr>
                </thead>

                <tbody>
                  <% locals.students.forEach(student => { %>
                  <tr>
                    <td><%= student.firstName %></td>
                    <td><%= student.lastName %></td>
                    <td><%= student.tel %></td>
                    <td><%= student.age %></td>
                    <td>
                      <%= student.department !== null ?
                      student.department.name : '0'%>
                    </td>
                    <td>
                      <a
                        id="<%=student._id%>"
                        href="#"
                        class="open-edit-company tooltipped"
                        data-position="top"
                        data-delay="50"
                        data-tooltip="Editare companie"
                      >
                        <i class="material-icons teal-text">mode_edit</i>
                      </a>
                      <a
                        id="<%=student._id%>"
                        href="#"
                        class="delete-company tooltipped"
                        data-position="top"
                        data-delay="50"
                        data-tooltip="Șterge companie"
                      >
                        <i class="material-icons teal-text">delete</i>
                      </a>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
    
            </div>
          </div>
        </div>
      </div>

      <div class="fixed-action-btn vertical">
        <a class="btn-floating btn-large red">
          <i class="large material-icons">menu</i>
        </a>
        <ul>
          <li>
            <a
              id="add-fuels-btn"
              data-activates="slide-out"
              class="btn-floating yellow darken-1 tooltipped"
              data-position="left"
              data-delay="50"
              data-tooltip="Show departments"
              ><i class="material-icons">invert_colors</i></a
            >
          </li>
          <li>
            <a
              id="add-students-btn"
              class="btn-floating orange tooltipped"
              data-position="left"
              data-delay="50"
              data-tooltip="Add student"
              ><i class="material-icons">add</i></a
            >
          </li>
        </ul>
      </div>

      <div id="modal-container" class="modal"></div>

      <a id="fuel-side-trigger" data-activates="slide-out"></a>
      <ul
        style=" padding-left: 20px !important; padding-right: 20px !important;  padding-bottom: 150px !important;"
        id="slide-out"
        class="fuels-side-nav side-nav"
      >
        <div class="fuels-side-nav">
          <div class="row">
            <div class="col s12 m12">
              <div class="center-align card-panel grey ">
                <span class=" white-text"
                  ><strong><h5>Departments</h5></strong>
                </span>
              </div>
            </div>
          </div>
          <div class="row">
            <a
              id="add-fuel-input"
              class="left btn-floating btn-large waves-effect waves-light orange tooltipped"
              data-position="right"
              data-delay="50"
              data-tooltip="Add department"
              ><i class="material-icons">add</i></a
            >
            <a
              id="delete-fuel-input"
              class="right btn-floating btn-large waves-effect waves-light red tooltipped"
              data-position="left"
              data-delay="50"
              data-tooltip="Delete department"
              ><i class="material-icons">delete</i></a
            >
          </div>
          <div id="inputs-container"></div>
          <div class="">
            <button
              id="save-fuels-btn"
              class="btn left modal-action waves-effect waves-light orange"
            >
              Salvează
            </button>
            <a
              id="close-fuels-nav"
              href="#!"
              class="right modal-action modal-close waves-effect waves-orange btn-flat"
            >
              Anulează
            </a>
          </div>
        </div>
      </ul>
    </main>
    <script
      src="https://code.jquery.com/jquery-3.2.1.min.js"
      integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <script type="text/javascript" src="/js/main.min.js"></script>
  </body>
</html>
